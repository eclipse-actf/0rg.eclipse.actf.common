<configuration>

  <pool id="model">
    <ignore>
      <types
        description="DOM types to ignore during validation"
        type="java.lang.String"
      >
      </types>
      
      <ids
        description="ids of DOM widgets to ignore during validation"
        type="java.lang.String"
      >
      </ids>
    </ignore>
    
    <locator
      type="java.lang.String"
      description="locator for constructing location paths for DOM elements"
    >
      org.eclipse.actf.core.locate.DomNodeLocator
    </locator>
    
    <baseType type="java.lang.String">
      org.w3c.dom.Node
    </baseType>
    
  </pool>

  <pool id="locator">
    <property
      name="org.w3c.dom.Element"
    >
      id
    </property>
  </pool>
  <!-- warning No formatter defined yet -->
  <pool id="formatter">
  <!--
  	<property
  		name = "org.w3c.dom"
	>
		org.eclipse.actf.model.format.DomElementFormatter
  	</property>	
  	-->
  	</pool>
  	
  	<pool id="aliases">
    <property name="Object">
      java.lang.Object
    </property>
    <property name="Node">
      org.w3c.dom.Node
    </property>
    <property name="Element">
      org.w3c.dom.Element
    </property>
  </pool>
  
</configuration>